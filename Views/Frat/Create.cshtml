@model FratViewModel

<form asp-action="Create" method="post" class="form-horizontal" role="form">

    <div class="well">
            <h2 class="text-primary text-center">Create New Static FRAT Form</h2>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-sm-12">
                    <label asp-for="Frat.FratDate" class="control-label"></label>
                    <input asp-for="Frat.FratDate" class="form-control" />
                    <span asp-validation-for="Frat.FratDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.Shift" class="control-label"></label>
                    <input asp-for="Frat.Shift" class="form-control" />
                    <span asp-validation-for="Frat.Shift" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.AirBase" class="control-label"></label>
                    <input asp-for="Frat.AirBase" class="form-control" />
                    <span asp-validation-for="Frat.AirBase" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.Crew" class="control-label"></label>
                    <input asp-for="Frat.Crew" class="form-control" />
                    <span asp-validation-for="Frat.Crew" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.WeatherBriefing" class="control-label"></label>
                    <input asp-for="Frat.WeatherBriefing" class="form-control" />
                    <span asp-validation-for="Frat.WeatherBriefing" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.AirbaseVmcOrImc" class="control-label"></label>
                    <input asp-for="Frat.AirbaseVmcOrImc" class="form-control" />
                    <span asp-validation-for="Frat.AirbaseVmcOrImc" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.StatewideVmcOrImc" class="control-label"></label>
                    <input asp-for="Frat.StatewideVmcOrImc" class="form-control" />
                    <span asp-validation-for="Frat.StatewideVmcOrImc" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.Tfr" class="control-label"></label>
                    <input asp-for="Frat.Tfr" class="form-control" />
                    <span asp-validation-for="Frat.Tfr" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.Aircraft" class="control-label"></label>
                    <input asp-for="Frat.Aircraft" class="form-control" />
                    <span asp-validation-for="Frat.Aircraft" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-4">
                    <label asp-for="Frat.Hobbs" class="control-label"></label>
                    <input asp-for="Frat.Hobbs" class="form-control" />
                    <span asp-validation-for="Frat.Hobbs" class="text-danger"></span>
                </div>
            </div>
    </div>

    <!-- Static Frat Form -->
    <div class="panel panel-primary">
        <div class="panel-heading"><span class="panel-title">Pilot</span></div>
        <div class="panel-body">
            <div class="form-group col-sm-12">
                <label asp-for="StaticFrat.Pilot_IllnessPhysicalCondition" class="control-label"></label>
                <div class="btn-group" data-toggle="buttons">
                    <div class="input-group">
                        <div class="btn btn-default">No Problems.  Mentally and physically in shape.</div>
                        <label class="btn btn-success">
                            <input type="radio" asp-for="StaticFrat.Pilot_IllnessPhysicalCondition" value="0" /> 0
                        </label>
                        <div class="btn btn-default"><i class="fa fa-thumbs-o-up"></i></div>
                    </div>
                    <div class="input-group">
                        <div class="btn btn-default">Nuisance, minor pain, illness or minor mental stress</div>
                        <label class="btn btn-warning">
                            <input type="radio" asp-for="StaticFrat.Pilot_IllnessPhysicalCondition" value="1" /> 1
                        </label>
                        <div class="btn btn-default">Discuss CRM methods to minimize errors caused by degraded health</div>
                    </div>
                    <div class="input-group">
                        <div class="btn btn-default">Illness requiring medication, persistent pain or discomfort, major mental stress</div>
                        <label class="btn btn-danger">
                            <input type="radio" asp-for="StaticFrat.Pilot_IllnessPhysicalCondition" value="2" /> 2
                        </label>
                        <div class="btn btn-default">STOP!  Get released for duty by flight medic</div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Pilot_Medication" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Pilot_Medication" value="0" /> 0 - No medication in last 24 hours
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Pilot_Medication" value="1" /> 1 - Approved OTC or prescription medication
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Pilot_Medication" value="2" /> 2 - Unapproved OTC or prescription medication ***STOP***
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Pilot_Fatigue" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Pilot_Fatigue" value="0" /> 0 - No fatigue. 6-8 hours sleep.
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Pilot_Fatigue" value="1" /> 1 - Some fatigue. Less than 6 hours sleep.
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Pilot_Fatigue" value="2" /> 2 - Mentally or physically fatigued. Less than 4 hours sleep.
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Pilot_TotalFlightTime" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Pilot_TotalFlightTime" value="0" /> 0 - Over 3000 hours tt
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Pilot_TotalFlightTime" value="1" /> 1 - Between 1000 and 3000 hours tt
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Pilot_TotalFlightTime" value="2" /> 2 - Below 1000 hours tt
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Pilot_FlightTimeInMakeModel" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Pilot_FlightTimeInMakeModel" value="0" /> 0 - Over 1000 hours in make/model
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Pilot_FlightTimeInMakeModel" value="1" /> 1 - Between 500 and 1000 hours in make/model
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Pilot_FlightTimeInMakeModel" value="2" /> 2 - Below 500 hours in make/model
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Pilot_LastFlightInMakeModel" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Pilot_LastFlightInMakeModel" value="0" /> 0 - Within 1 month
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Pilot_LastFlightInMakeModel" value="1" /> 1 - Between 1 and 3 months
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Pilot_LastFlightInMakeModel" value="2" /> 2 - Over 3 months (not current for flight)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Pilot_CurrencyTraining" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Pilot_CurrencyTraining" value="0" /> 0 - Previous 6 months (factory, sim, recurrent training, etc.)
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Pilot_CurrencyTraining" value="1" /> 1 - Training conducted 6-12 months prior
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Pilot_CurrencyTraining" value="2" /> 2 - None in the last 12 months
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Pilot_ImcPrep" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Pilot_ImcPrep" value="0" /> 0 - IFR current - IIMC training within last 6 months
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Pilot_ImcPrep" value="1" /> 1 - IFR currency 6 months old - IIMC training more than 6 months prior
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Pilot_ImcPrep" value="2" /> 2 - No IFR currency or IIMC training in last 12 months
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading"><span class="panel-title">TFO or Co-pilot</span></div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="StaticFrat.TfoCoPilot_IllnessPhysicalCondition" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_IllnessPhysicalCondition" value="0" /> 0 - No medication in last 24 hours
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_IllnessPhysicalCondition" value="1" /> 1 - Approved OTC or prescription medication
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_IllnessPhysicalCondition" value="2" /> 2 - Unapproved OTC or prescription medication ***STOP***
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.TfoCoPilot_Medication" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_Medication" value="0" /> 0 - No medication in last 24 hours
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_Medication" value="1" /> 1 - Approved OTC or prescription medication
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_Medication" value="2" /> 2 - Unapproved OTC or prescription medication ***STOP***
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.TfoCoPilot_Fatigue" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_Fatigue" value="0" /> 0 - No fatigue. 6-8 hours sleep.
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_Fatigue" value="1" /> 1 - Some fatigue. Less than 6 hours sleep.
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_Fatigue" value="2" /> 2 - Mentally or physically fatigued. Less than 4 hours sleep.
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.TfoCoPilot_TotalFlightTime" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_TotalFlightTime" value="0" /> 0 - Over 1000 hours flight time or more than 3 years experience
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_TotalFlightTime" value="1" /> 1 - Between 300 and 1000 hours total flight time or 1-3 years experience
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_TotalFlightTime" value="2" /> 2 - Below 300 hours total flight time or less than 6 months experience
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.TfoCoPilot_FlightCrew" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_FlightCrew" value="0" /> 0 - More than 100 hours working together as a flight crew
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_FlightCrew" value="1" /> 1 - Between 20 and 100 hours working together as a flight crew
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_FlightCrew" value="2" /> 2 - Below 20 hours working together as a flight crew
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.TfoCoPilot_ImcPrep" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_ImcPrep" value="0" /> 0 - IFR current - IIMC training within last 6 months
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_ImcPrep" value="1" /> 1 - IFR currency 6 months old - IIMC training more than 6 months prior
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.TfoCoPilot_ImcPrep" value="2" /> 2 - No IFR currency or IIMC training in last 12 months
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading"><span class="panel-title">Aircraft</span></div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="StaticFrat.Aircraft_RecentMaintenance" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Aircraft_RecentMaintenance" value="0" /> 0 - More than 10 hours since aircraft was in maintenance
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Aircraft_RecentMaintenance" value="1" /> 1 - Between 5 and 10 hours since last maintenance
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Aircraft_RecentMaintenance" value="2" /> 2 - Less than 5 hours since last maintenance
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Aircraft_KnownDiscrepancies" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Aircraft_KnownDiscrepancies" value="0" /> 0 - None
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Aircraft_KnownDiscrepancies" value="1" /> 1 - 1-2 Discrepancies
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Aircraft_KnownDiscrepancies" value="2" /> 2 - More than 2 Discrepancies
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="StaticFrat.Aircraft_Performance" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="btn-group" data-toggle="buttons">
                        <div>
                            <label class="btn btn-success">
                                <input type="radio" asp-for="StaticFrat.Aircraft_Performance" value="0" /> 0 - Well under limits (MAX GW 2950 kg or 6503 lbs)
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-warning">
                                <input type="radio" asp-for="StaticFrat.Aircraft_Performance" value="1" /> 1 - Within 10% of max gross or CG limit (5853 lbs)
                            </label>
                        </div>
                        <div>
                            <label class="btn btn-danger">
                                <input type="radio" asp-for="StaticFrat.Aircraft_Performance" value="2" /> 2 - Within 5% of max gross or CG limit (6118 lbs)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading"><span class="panel-title">Other Factors</span></div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="StaticFrat.ThirdCrewMember" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="StaticFrat.ThirdCrewMember" class="form-control" />
                    <span asp-validation-for="StaticFrat.ThirdCrewMember" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StaticFrat.SoloFlight" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="StaticFrat.SoloFlight" class="form-control" />
                    <span asp-validation-for="StaticFrat.SoloFlight" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Submit and Cancel buttons -->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Save Static FRAT Form" />
            <a class="btn btn-primary" asp-controller="Frat" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>