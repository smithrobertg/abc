@model ReadBeforeFlight

@if(Model.AircraftGrounded)
{
    <div class="well well-sm"><h1 class="bg-danger text-danger text-center"><i class="fa fa-warning"></i> Aircraft Grounded</h1></div>
}
else
{
    <div class="well well-sm"><h1 class="bg-success text-success text-center"><i class="fa fa-plane"></i> Aircraft In Service</h1></div>
}
<dl>
    <dt>RBF Number:</dt>
    <dd>@Html.DisplayFor(model => model.Id)</dd>

    <dt>Date Created:</dt>
    <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>

    <dt>AirBase:</dt>
    <dd>@Html.DisplayFor(model => model.Airbase)</dd>

    <dt>Reported By:</dt>
    <dd>@Html.DisplayFor(model => model.ReportedBy)</dd>

    <dt>Aircraft:</dt>
    <dd>@Html.DisplayFor(model => model.Aircraft)</dd>

    <dt>Occurence:</dt>
    <dd>@Html.DisplayFor(model => model.Occurence)</dd>

    <dt>Description:</dt>
    <dd>@Html.DisplayFor(model => model.Description)</dd>

    <dt>Action Taken:</dt>
    <dd>@Html.DisplayFor(model => model.ActionTaken)</dd>

    <dt>Aircraft Grounded:</dt>
    <dd>@Html.DisplayFor(model => model.AircraftGrounded)</dd>

    <dt>Grounded Date:</dt>
    <dd>@Html.DisplayFor(model => model.AircraftGroundedDate)</dd>

    <dt>In-Service Date:</dt>
    <dd>@Html.DisplayFor(model => model.InServiceDate)</dd>
</dl>
<br />
<div>
    <a class="btn btn-default" asp-action="Index"><i class="fa fa-close"></i> Close</a>
</div>